! Config d'un VPN
Mettre une adresse statique sur les ports,puis dans le settings->global mettre le meme sous rÃ©seau internet

!----------- Routeur 0 ------------

enable 
	conf t
		int fa0/0
			no shut
			ip address 172.148.0.1 255.0.0.0
		int fa0/1
			no shut
			ip address 192.168.10.1 255.255.255.0
		exit
		interface tunnel 0
			no shut
			ip address 192.168.30.1 255.255.255.0
			!mettre l'adresse ip de l'autre routeur
			tunnel destination 172.188.40.2
			!l'interface qui veux envoyer sur l'internet
			tunnel source fa0/0
			tunnel mode gre ip
		exit
		ip routing 
		ip route 192.168.20.0 255.255.255.0 192.168.30.2
	exit
exit



!------------ Routeur 1 ------------

enable 
	conf t
		int fa0/0
			no shut
			ip address 172.188.40.2 255.0.0.0
		int fa0/1
			no shut
			ip address 192.168.20.1 255.255.255.0
		exit
		interface tunnel 0
			no shut
			ip address 192.168.30.2 255.255.255.0
			!mettre l'adresse ip de l'autre routeur
			tunnel destination 172.148.0.1
			!l'interface qui veux envoyer sur l'internet
			tunnel source fa0/0
			tunnel mode gre ip
		exit
		ip routing 
		ip route 192.168.10.0 255.255.255.0 192.168.30.1
	exit
exit